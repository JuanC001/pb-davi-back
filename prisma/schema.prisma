generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  password       String
  name           String
  surname        String?
  document       String
  role           Role            @default(USER)
  EventOrganizer EventOrganizer?
}

model EventOrganizer {
  id                 Int      @id @default(autoincrement())
  ownerId            Int      @unique
  owner              User     @relation(fields: [ownerId], references: [id])
  companyName        String
  companyDescription String?
  Events             Events[]
}

enum EventStatus {
  PENDIENTE
  CURSO
  FINALIZADO
  CANCELADO
}

model Events {
  id               Int            @id @default(autoincrement())
  name             String
  description      String?
  price            Float
  location         String
  startDate        DateTime
  endDate          DateTime
  startTime        DateTime
  endTime          DateTime
  status           EventStatus    @default(PENDIENTE)
  image            String?
  eventOrganizerId Int
  eventOrganizer   EventOrganizer @relation(fields: [eventOrganizerId], references: [id])
}
